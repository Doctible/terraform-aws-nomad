{
  "min_packer_version": "1.6.5",
  "variables": {
    "aws_region": "us-west-2",
    "nomad_version": "1.0.1",
    "consul_module_version": "v0.8.2",
    "consul_version": "1.9.1",
    "ami_name_prefix": "nomad-consul"
  },
  "builders": [
    {
      "ami_name": "{{user `ami_name_prefix`}}-amazon-linux-2-{{isotime | clean_resource_name}}",
      "ami_description": "An Amazon Linux 2 AMI that has Nomad and Consul installed.",
      "instance_type": "m5ad.large",
      "name": "amazon-linux-2-ami",
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "*amzn2-ami-hvm-*",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "owners": [
          "amazon"
        ],
        "most_recent": true
      },
      "ssh_username": "ec2-user"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum install -y git"
      ],
      "only": [
        "amazon-linux-2-ami"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "git clone --branch v0.7.0 https://github.com/hashicorp/terraform-aws-nomad.git /tmp/terraform-aws-nomad",
        "/tmp/terraform-aws-nomad/modules/install-nomad/install-nomad --version {{user `nomad_version`}}"
      ],
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "environment_vars": [
        "NOMAD_VERSION={{user `nomad_version`}}",
        "CONSUL_VERSION={{user `consul_version`}}",
        "CONSUL_MODULE_VERSION={{user `consul_module_version`}}"
      ],
      "script": "{{template_dir}}/setup_nomad_consul.sh"
    }
  ]
}

